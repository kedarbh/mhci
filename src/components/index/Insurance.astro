---
import insurance from "@config/insurance.json";
// import InsuranceCard from "./InsuranceCard.astro";
import { Icon } from "astro-icon/components";

export interface InsuranceList {
  name: string;
  logo: string;
}

const { insuranceList }: { insuranceList: InsuranceList[] } = insurance;
---

<section class="py-24">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mb-20 text-center">
      <span class="text-sky-600 text-center font-medium mb-4 block"
        >Comprehensive Coverage</span
      >
      <h2 class="text-4xl text-gray-900 text-center font-bold">
        Accepted Insurance Plans
      </h2>
    </div>
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 xl:grid-cols-4">
      {
        insuranceList.map((item: any) => (
          <div class="flex justify-center items-center border border-solid border-gray-200 shadow-sm h-20  rounded-2xl">
            <Icon name=`insurance/${item.logo}` class="h-20 w-full"/>
          </div>
        ))
      }
    </div>
  </div>
</section>
