---
import stepSlider from "@config/stepSlider.json";

export interface Slider {
  step: string;
  title: string;
  description: string;
}

const { slider }: { slider: Slider[] } = stepSlider;
---

<section class="py-24 relative">
  <div class="w-full max-w-7xl px-4 md:px-5 lg:px-5 mx-auto">
    <div
      class="w-full flex-col justify-start items-center lg:gap-12 gap-8 inline-flex"
    >
      <div class="w-full flex-col justify-start items-center gap-3 flex">
        <span
          class="w-full text-center text-sky-600 text-base font-normal leading-relaxed"
          >How It Works</span
        >
        <h2
          class="w-full text-center text-4xl font-bold font-manrope leading-normal"
        >
          Three Simple Steps to Care
        </h2>
      </div>
      <div
        class="w-full justify-start lg:items-end items-center lg:gap-16 gap-8 flex lg:flex-row flex-col"
      >
        <img class="w-1/2" src="./step-discuss.svg" alt="How It Works image" />
        <div class="flex flex-col lg:gap-32 gap-16 w-full">
          <div class="grid grid-cols-1 gap-y-12">
            {
              slider.map((slide) => (
                <>
                  <div class="w-full flex-col justify-center items-start gap-2 flex">
                    <span class="w-full text-sky-600 text-base font-medium leading-relaxed lg:text-start text-center">
                      {slide.step}
                    </span>
                    <div class="w-full flex-col justify-center lg:items-start items-center gap-1.5 flex">
                      <h4 class="text-gray-900 text-xl font-semibold leading-8 lg:text-start text-center">
                        {slide.title}
                      </h4>
                      <p class="lg:max-w-3xl w-full text-gray-500 text-base font-normal leading-relaxed lg:text-start text-center">
                        {slide.description}
                      </p>
                    </div>
                  </div>
                </>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
